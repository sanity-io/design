{
  "include": ["**/*.ts", "**/*.tsx", "./next-env.d.ts", "./typings"],
  "exclude": ["./build", "./node_modules"],
  "compilerOptions": {
    "composite": true,
    "outDir": "./build/dts",
    "baseUrl": ".",
    "incremental": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "$components": ["./components"],
      "$components/*": ["./components/*"],
      "$theme": ["./theme"]
    }
  },
  "references": [
    {"path": "../../packages/@sanity/color/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/icons/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/logos/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/ui/tsconfig.dist.json"}
  ]
}
