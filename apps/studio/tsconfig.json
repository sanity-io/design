{
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["./build"],
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "./build/ide"
  },
  "references": [
    {"path": "../../packages/@sanity/icons/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/logos/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/ui/tsconfig.dist.json"}
  ]
}
