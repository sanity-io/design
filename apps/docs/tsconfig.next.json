{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/__fixtures__/*",
    "**/__mocks__/*",
    "**/__workshop__/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./build/",
    "./node_modules/"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "rootDir": "../../",
    "outDir": "./build/dts/",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "$components": ["./components"],
      "$components/*": ["./components/*"],
      "$config": ["./config"],
      "$lib/*": ["./lib/*"],
      "$queries": ["./queries"],
      "$packages": ["./packages"],
      "$sanity": ["./sanity"],
      "$sanity.server": ["./sanity.server"],
      "$screens/*": ["./screens/*"],
      "$sections": ["./sections"],
      "@sanity/*": ["../../packages/@sanity/*/src"],
      "$workshop/*": ["./workshop/*"]
    }
  }
}
