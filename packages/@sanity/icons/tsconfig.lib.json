{
  "extends": "../../../tsconfig.settings",
  "include": ["./src/"],
  "exclude": [
    "./src/**/__fixtures__/",
    "./src/**/__mocks__/",
    "./src/**/__workshop__/",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib/dts/",
    "declarationDir": "./lib/dts/",
    "rootDir": "./",
    "jsx": "react"
  }
}
