{
  "extends": "../../../tsconfig.settings",
  "include": ["./src/", "./typings/"],
  "exclude": [
    "./src/**/__fixtures__/",
    "./src/**/__mocks__/",
    "./src/**/__workshop__/",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "rootDir": "./",
    "outDir": "./lib/dts/",
    "declarationDir": "./lib/dts/",
    "module": "ES2020",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "$test": ["../../../test/"]
    }
  },
  "references": [
    {"path": "../color/tsconfig.lib.json"},
    {"path": "../icons/tsconfig.lib.json"},
    {"path": "./tsconfig.test.json"},
    {"path": "./tsconfig.workshop.json"}
  ]
}
