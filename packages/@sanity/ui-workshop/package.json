{
  "name": "@sanity/ui-workshop",
  "version": "0.4.6",
  "sideEffects": false,
  "bin": {
    "workshop": "./bin/workshop.js"
  },
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "require": "./lib/sanity-ui-workshop.js",
      "default": "./lib/sanity-ui-workshop.modern.js"
    },
    "./cli": {
      "require": "./lib/cli.js",
      "default": "./lib/cli.modern.js"
    }
  },
  "main": "./lib/sanity-ui-workshop.js",
  "module": "./lib/sanity-ui-workshop.module.js",
  "types": "./lib/dts/src/index.d.ts",
  "files": [
    "bin",
    "lib",
    "src"
  ],
  "license": "MIT",
  "scripts": {
    "build": "run-s build:microbundle",
    "build:microbundle": "microbundle --format modern,esm,cjs --jsx React.createElement --jsxImportSource react --no-compress --tsconfig tsconfig.lib.json src/{cli,index}.ts",
    "build:smoketest": "node -r esbuild-register src/cli build",
    "clean": "rimraf .workshop build lib",
    "dev": "DEBUG='workshop:*' node -r esbuild-register src/cli dev",
    "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx --quiet",
    "prebuild": "yarn clean",
    "test": "jest",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^1.3.1",
    "axe-core": "^4.4.1",
    "cac": "^6.7.12",
    "chokidar": "^3.5.3",
    "debug": "^4.3.4",
    "express": "^4.18.0",
    "pako": "^2.0.4",
    "glob": "^7.2.0",
    "mkdirp": "^1.0.4",
    "pkg-up": "^3.1.0",
    "react-refractor": "^2.1.7",
    "refractor": "^4.6.0",
    "segmented-property": "^3.0.3",
    "vite": "^2.9.6"
  },
  "devDependencies": {
    "@sanity/icons": "^1.3.0",
    "@sanity/ui": "^0.37.11",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/pako": "^1.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.5"
  },
  "peerDependencies": {
    "@sanity/icons": "^1.0",
    "@sanity/ui": "^0.33",
    "react": "^16.9 || ^17 || ^18",
    "react-dom": "^16.9 || ^17 || ^18",
    "styled-components": "^5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/design.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/design/issues"
  },
  "keywords": [
    "sanity",
    "ui",
    "components"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "homepage": "https://www.sanity.io/",
  "publishConfig": {
    "access": "public"
  }
}
