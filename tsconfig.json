{
  "extends": "./tsconfig.settings",
  "include": [
    "./.eslintrc.js",
    "./jest.config.js",
    "./package.json",
    "./scripts/",
    "./test/",
    "./workshop.config.ts"
  ],
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build/ts/",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@sanity/*": ["./packages/@sanity/*/src"]
    }
  },
  "references": [
    {"path": "./apps/docs/"},
    {"path": "./apps/studio/"},

    {"path": "./examples/manage/"},
    {"path": "./examples/studio/"},
    {"path": "./examples/web/"},

    {"path": "./packages/@sanity/color/"},
    {"path": "./packages/@sanity/icons/"},
    {"path": "./packages/@sanity/logos/"},
    {"path": "./packages/@sanity/tsdoc-to-portable-text/"},
    {"path": "./packages/@sanity/tsdoc-to-portable-text/tsconfig.lib.json"},
    {"path": "./packages/@sanity/ui/"},
    {"path": "./packages/@sanity/ui-workshop/"},

    {"path": "./packages/pkg-utils/"}
  ]
}
