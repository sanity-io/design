{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build:workshop": "lerna run --scope sanity-ui-workshop build",
    "clean": "rimraf build && lerna run clean",
    "dev": "run-p dev:ui",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "dev:ui": "yarn --cwd apps/workshop dev",
    "extract": "run-s extract:*",
    "extract:tsdoc-to-portable-text": "cd scripts/extract && node -r dotenv-flow/config -r esbuild-register tsdoc-to-portable-text.ts",
    "generate": "lerna run generate",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "yarn husky install",
    "release:dryrun": "yarn build && ./scripts/publish/dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=next --preid=next --exact",
    "start:workshop": "lerna run --scope sanity-ui-workshop start",
    "test": "jest",
    "type-check": "tsc --build",
    "watch": "run-p watch:*",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^3.3.0",
    "@sanity/tsdoc-to-portable-text": "^0.1.18",
    "@types/jest": "^27.4.1",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^17.0.24",
    "@types/prettier": "^2.6.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/react-is": "^17.0.3",
    "@types/react-test-renderer": "^18.0.0",
    "@types/rimraf": "^3.0.2",
    "@types/styled-components": "^5.1.25",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "chalk": "^5.0.1",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.14.36",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "get-port": "^5.1.1",
    "globby": "^11.1.0",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-axe": "^6.0.0",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.8",
    "mkdirp": "^1.0.4",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.20.2",
    "prettier": "^2.6.2",
    "react-test-renderer": "^18.0.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2",
    "verdaccio": "^5.9.0",
    "yargs": "^17.4.1"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*",
    "packages/pkg-utils"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
