{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build:workshop": "rimraf dist && bin/workshop build",
    "_build:workshop": "lerna run --scope sanity-ui-workshop build",
    "clean": "rimraf .workshop build etc dist && lerna run clean",
    "dev": "run-p dev:workshop test:cypress:run",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "dev:ui": "bin/workshop dev packages/@sanity/ui",
    "dev:ui-workshop": "lerna run --stream --scope @sanity/ui-workshop dev",
    "dev:workshop": "bin/workshop dev",
    "etl": "yarn prettify:dts && cd scripts/etl && node -r dotenv-flow/config -r esbuild-register main",
    "generate": "lerna run generate",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "yarn husky install",
    "prettify:dts": "prettier --loglevel warn --write packages/@sanity/*/lib/dts",
    "release:dryrun": "yarn build && ./scripts/publish/dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=next --preid=next --exact",
    "start:workshop": "http-server -a localhost -c-0 -p 9009 -s -P http://localhost:9009/index.html? dist",
    "test": "jest",
    "test:browser": "start-server-and-test 'run-s build:workshop start:workshop' http://localhost:9009 'yarn test:cypress:run'",
    "test:cypress:open": "cypress open --config-file .cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file .cypress/cypress.json",
    "type-check": "tsc --build",
    "watch": "run-p watch-*",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^3.3.0",
    "@sanity/tsdoc-to-portable-text": "^0.3.0",
    "@types/jest": "^27.5.1",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^17.0.35",
    "@types/prettier": "^2.6.1",
    "@types/react": "18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/react-test-renderer": "^17.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/styled-components": "5.1.16",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "cac": "^6.7.12",
    "chalk": "^5.0.1",
    "cpx": "^1.5.0",
    "cypress": "^9.7.0",
    "cypress-real-events": "^1.7.0",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.14.39",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "globby": "^11.1.0",
    "http-server": "^14.1.0",
    "husky": "^7.0.4",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-axe": "^6.0.0",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.2",
    "microbundle": "^0.15.0",
    "mkdirp": "^1.0.4",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.7.2",
    "uuid": "^8.3.2",
    "verdaccio": "^5.10.2",
    "yargs": "^17.5.1"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
